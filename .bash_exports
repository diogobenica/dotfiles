export CLICOLOR=1
export LSCOLORS=gxfxDxdxcxexExhxHxbxBx
# ~ and my projects folder for cd shortcut
export CDPATH=$CDPATH:/Users/$(whoami)/dev:/Users/$(whoami)
# highlight grep match
export GREP_OPTIONS="--color=auto"
# light red for matches
export GREP_COLOR="4;33"
# history size
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
# ignore somethings in history
export HISTIGNORE='&:ls:ll:[bf]g:pwd'
# ignore duplicate line in history
export HISTCONTROL='ignoredups:erasedups'
# default editor is vim
export EDITOR=vim

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
